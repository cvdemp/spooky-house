<h1><%= @game.name %></h1>

<div>
  <h1>Pick a character!</h1>
  <h3>
    <% @characters.each do |char| %>
      <%= link_to char.name, character_path(char), user_id: current_user.id,  method: 'patch' %><br>
    <% end %>
  </h3>
</div>

<div class="players">
<% if !@game.characters.nil? && !@game.characters.empty? %>
  <h3>Current Players</h3>
  <% @game.characters.each do |char| %>
    <%= link_to char.name, character_path(char) %><br>
  <% end %>
<% end %>
</div>

<div>
  <%= link_to "Create a character", new_character_path(@character), class: "button" %>
</div>
