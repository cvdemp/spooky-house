<div>
  <h1> Create a Character </h1>
</div>
<div>
  <%= form_for @character do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :birthday %>
    <%= f.date_select :birthday , start_year: 1910 %>

    <%= f.label :hobby_1 %>
    <%= f.text_field :hobby_1%>

    <%= f.label :hobby_2 %>
    <%= f.text_field :hobby_2%>

    <%= f.hidden_field :user_id, value: current_user.id %>

    <%= f.submit "Submit" %>
  <% end %>
</div>
